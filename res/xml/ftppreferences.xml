<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <PreferenceCategory 
        android:title="FTP Einstellungen"
        >
        <EditTextPreference
			android:title="Address"
			android:key="@string/ftp_address"
            />
		<EditTextPreference 
		    android:title="Username"
		    android:key="@string/ftp_username"
		    />        
        <EditTextPreference
            android:title="Password"
            android:key="@string/ftp_password"
            android:persistent="true"
            android:inputType="textPassword"
            />
		<ListPreference 
		    android:title="Connection Type"
		    android:key="@string/ftp_conntype"
		    android:entries="@array/connectiontypes"
		    android:entryValues="@array/connectiontypes"
		    android:defaultValue="TLS"
		    />
        <EditTextPreference
            android:title="Proxy"
            android:key="@string/ftp_proxy"
            />
        <CheckBoxPreference 
            android:title="Automatisch Uploaden"
            android:key="@string/ftp_activate"
            android:defaultValue="false"
            />
    </PreferenceCategory>
    

</PreferenceScreen>
